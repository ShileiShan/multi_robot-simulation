<launch>
  <!-- No namespace here as we will share this description.
       Access with slash at the beginning -->
  <!--param name="robot_description" 
          textfile="$(dirname)/../urdf/test_wheel.urdf"/-->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder $(find test_crawler)/urdf/test_crawler.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find test_crawler)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 0.5 -y -0.5 -z 0 -Y 0" />
      <arg name="robot_name"  value="robot1" />
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find test_crawler)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 0.5 -y -2.5 -z 0 -Y 0" />
      <arg name="robot_name"  value="robot2" />
    </include>
  </group>

</launch>
