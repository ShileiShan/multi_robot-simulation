<launch>
  <!-- No namespace here as we will share this description.
       Access with slash at the beginning -->
  <!--param name="robot_description" 
          textfile="$(dirname)/../urdf/test_wheel.urdf"/-->
  <param name="/use_sim_time" value="true" />
  
  <!-- start world -->
  <node name="gazebo" pkg="gazebo_ros" type="gazebo"
   args="$(find test_environment)/world/indoor_something.world" respawn="false" output="screen" />
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder $(find test_wheel)/urdf/test_wheel.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <param name="robot_description"
      command="$(find xacro)/xacro --inorder $(find test_wheel)/urdf/test_wheel.urdf.xacro" />
    <include file="$(find test_wheel)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 17 -y -0 -z 0 -Y 0" />
      <arg name="robot_name"  value="robot1" />
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <param name="robot_description"
      command="$(find xacro)/xacro --inorder $(find test_wheel)/urdf/test_wheel.urdf.xacro" />
    <include file="$(find test_wheel)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 18 -y -0 -z 0 -Y 0" />
      <arg name="robot_name"  value="robot2" />
    </include>
  </group>

</launch>
