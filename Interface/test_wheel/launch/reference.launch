<launch>
  
  <param name="/use_sim_time" value="true" />
  
  <!-- start world -->
  <node name="gazebo" pkg="gazebo_ros" type="gazebo"
   args="$(find test_environment)/world/env_stl.world" respawn="false" output="screen" />

  <param name="robot_description"
    command="$(find xacro)/xacro --inorder $(find test_wheel)/urdf/test_wheel.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <!--param name="tf_prefix" value="robot1_tf" /-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find test_wheel)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 0 -y -3 -z 0 -Y 0" />
      <arg name="robot_name"  value="robot1" />
    </include>
  </group>

  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find test_wheel)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 10 -y -13 -z 0 -Y 0" />
      <arg name="robot_name"  value="robot2" />
    </include>
  </group>


</launch>
